<html>

	<head>
		<meta charset="utf-8"/>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js" integrity="sha512-+k1pnlgt4F1H8L7t3z95o3/KO+o78INEcXTbnoJQ/F2VqDVhWoaiVml/OEHv9HsVgxUaVW+IbiZPUJQfF/YxZw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<style>

		body {
			background: url("https://blog.arboimoveis.com.br/wp-content/uploads/2021/07/como-abrir-uma-imobiliaria-vender-imoveis.jpg");
			background-size: cover;
			background-position: center;
			min-height: 100vh;
			align-items: center;
			justify-content: center;
		}

		h2 {
			font-size: 36px;
			text-align: center;
			color: black;
		}
		
		.container {
			width: 500px;
			background: transparent;
			border: 2px solid #333;
			backdrop-filter: blur(20px);
			border-radius: 10px;
			padding: 50px 60px;
		}

		.input-container {
			position: relative;
			width: 100%;
			height: 100%;
			margin: 30px 0;
		}

		.input-container input {
			width: 85%;
			height: 85%;
			background: transparent;
			border: none;
			outline: none;
			border: 2px solid rgba(255, 255, 255, .2);
			border-radius: 10px;
			font-size: 14px;
			color: #000000;
			padding: 20px 45px 20px 20px;
		}

		.input-container input::placeholder {

		color: #fff;
		}

		.submit-button {
			width: 100%;
			height: 50px;
			background-color: #333;
			border: none;
			border-radius: 10px;
			color: #fff;
			font-weight: 500;
			margin-top: 24px;
			cursor: pointer;
			outline: #fff;
			font-size: 14px;
		}

		.submit-button:hover {

				color: rgb(255, 255, 255);
			}

	</style>
	
	
	</head>
	
<body>
	
	<br />
	<a asp-area="" asp-controller="Imobiliaria" asp-action="PageHome">Voltar</a>
	<br /><br />

	
	<div class="container">

	<form>
	
	<h2>Login</h2>
	<br /><br />

	@{
		String email = Context.Request.Query["email"];
		email = email!=null?email:""; 
		}

		<div class="input-container">
			E-mail: <input type="text" id="email" value="@email"/><br />
			</div>
		<div class="input-container">
			Senha: <input type="password" id="senha" /><br /><br />
		</div>

		<input type="button" class ="submit-button" value="Entrar" onclick="fazer_login()" />
		
		<br />
		
		<div class="register-link">
			<a href="/imobiliaria/PageCadastroFuncionario">Novo Usuário</a>
		</div>

	</form>

	</div>

	<script>
		function fazer_login(){

		var jsonEnvio = {};
		jsonEnvio.email = document.getElementById("email").value;
		jsonEnvio.senha = document.getElementById("senha").value;
		
		$.ajax({
			url: "/Funcionario/Login/",
			data: jsonEnvio,
			type: "post",
			success: function (resp){
				if (resp=="ok"){
					document.location.href = "/imobiliaria/PageAreaAdministrativa";
				}else{
					alert("Usuário ou senha inválidos!");
					}
				}
			});
		}

	</script>

	
</body>
</html>